<div class="shadow p-3 mb-5 bg-body rounded games">
  <h1 class="header-border">Games</h1>

  <p style="color: green"><%= notice %></p>

  <% @games.each do |game| %>
    <%= render game %>
      <div class="shadow p-3 mb-5 bg-body rounded game">
        <div class="text">
          <%=link_to "Game ##{game.id}", game, class: "text-border" %>: <%= game.winner.formatted_name %> has beaten <%= game.loser.formatted_name %> in a set count of <%=game.winner_score.to_s %> to <%=game.loser_score %>
        </div>
      </div>
  <% end %>
</div>

<div class="new-game">
  <div clas="absolute">
    <%= link_to "New game", new_game_path, class: 'btn btn-primary text-border', data: { turbo_frame: "remote_modal" } %>
  </div>
</div>

